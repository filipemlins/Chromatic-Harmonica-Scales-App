<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    tools:context=".MainActivity">


    <android.support.constraint.ConstraintLayout
        android:id="@+id/Buttons_Constraint"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/Octaves_constraint"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_weight="0.15">




        <com.vcc.gaitalins.SpinnerView
            android:id="@+id/harp_select"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_weight=".3"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/scale"
            app:layout_constraintTop_toTopOf="parent" />

        <com.vcc.gaitalins.SpinnerView
            android:id="@+id/scale"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_weight=".35"
            app:layout_constraintLeft_toRightOf="@id/harp_select"
            app:layout_constraintRight_toLeftOf="@id/key_select"
            app:layout_constraintTop_toTopOf="parent" />

        <com.vcc.gaitalins.SpinnerView
            android:id="@+id/key_select"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_weight=".3"
            app:layout_constraintLeft_toRightOf="@id/scale"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </android.support.constraint.ConstraintLayout>


    <android.support.constraint.ConstraintLayout
        android:id="@+id/Octaves_constraint"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/ads"
        app:layout_constraintTop_toBottomOf="@id/Buttons_Constraint"
        app:layout_constraintVertical_weight="0.85">

        <com.vcc.gaitalins.OctaveView
            android:id="@+id/octave_1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginLeft="@dimen/padding_small"
            android:layout_marginStart="@dimen/padding_small"
            android:paddingTop="@dimen/padding_medium"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/octave_2"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_weight="8" />

        <View
            android:id="@+id/view3"
            android:layout_width="1dp"
            android:layout_height="0dp"
            android:layout_marginTop="8dp"
            android:background="@android:color/white"
            android:paddingTop="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/octave_1"
            app:layout_constraintRight_toLeftOf="@id/octave_2"
            app:layout_constraintTop_toTopOf="parent" />

        <com.vcc.gaitalins.OctaveView
            android:id="@+id/octave_2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginLeft="@dimen/padding_reallysmall"
            android:layout_marginStart="@dimen/padding_reallysmall"
            android:paddingTop="@dimen/padding_medium"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/octave_1"
            app:layout_constraintRight_toRightOf="@id/octave_3"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/view4"
            android:layout_width="1dp"
            android:layout_height="0dp"
            android:layout_marginTop="8dp"
            android:background="@android:color/white"
            android:paddingTop="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/octave_2"
            app:layout_constraintRight_toLeftOf="@id/octave_3"
            app:layout_constraintTop_toTopOf="parent" />


        <com.vcc.gaitalins.OctaveView
            android:id="@+id/octave_3"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginEnd="@dimen/padding_small"
            android:layout_marginLeft="@dimen/padding_reallysmall"
            android:layout_marginRight="@dimen/padding_small"
            android:layout_marginStart="@dimen/padding_reallysmall"
            android:paddingTop="@dimen/padding_medium"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/octave_2"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    </android.support.constraint.ConstraintLayout>


    <com.google.android.gms.ads.AdView xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/ads"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible"
        ads:adSize="SMART_BANNER"
        ads:adUnitId="@string/admob_banner_id"
        ads:layout_constraintEnd_toEndOf="parent"
        ads:layout_constraintHorizontal_bias="1.0"
        ads:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/Octaves_constraint">

    </com.google.android.gms.ads.AdView>

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@string/c" />

</android.support.constraint.ConstraintLayout>